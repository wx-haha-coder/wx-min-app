.comment-box {
  position: relative;
}

.comment-userinfo {
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
}

.comment-user-avatar {
  position: relative;
  width: 76rpx;
  height: 76rpx;
  border-radius: 50%;
  background-color: #efedec;
}

.comment-user {
  margin-left: 30rpx;
}

.comment-user-name {
  font-size: 28rpx;
  line-height: 40rpx;
  color: #484848;
  font-weight: 500;
}

.comment-user-time {
  color: #b0a9a3;
  font-size: 24rpx;
  line-height: 44rpx;
}

.comment-word {
  position: relative;
  margin: 16rpx 0 16rpx 106rpx;
  color: #686868;
  font-size: 28rpx;
  line-height: 44rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 4;
  padding-bottom: 44rpx;
}