.banner-wrap {
  width: 100%;
  overflow: hidden;
  position: relative;
}

.banner-img {
  display: block;
  width: 100%;
}

.product-list {
  padding-top: 40rpx;
  padding-bottom: 40rpx;
}

.activity-item {
  border-radius: 6rpx;
  background-color: #fff;
  overflow: hidden;
  position: relative;
}

.activity-item {
  margin-bottom: 40rpx;
}

.product-title {
  font-size: 32rpx;
  color: #484848;
}

.product-img {
  display: block;
  width: 100%;
  height: 220rpx;
  border-radius: 10rpx;
}

.activity-sub {
  margin-top: 40rpx;
  padding: 0 24rpx 24rpx;
}

.activity-title {
  margin-right: 60rpx;
  overflow: hidden;
}

.activity-desc {
  padding-top: 18rpx;
  font-size: 24rpx;
  color: #918D89;
  
}

.list-end-tip {
  padding: 40rpx 0;
}
