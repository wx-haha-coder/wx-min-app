/* pages/user/order/index.wxss */

.tab-list {
  width: 100%;
  height: 120rpx;
  padding: 36rpx 60rpx 0;
  box-sizing: border-box;
  background: #fff;
  overflow-x: scroll;
  overflow-y: hidden;
  white-space: nowrap;
}

.tab-scroll-content {
  background: #fff;
  overflow-x: scroll;
  overflow-y: hidden;
  white-space: nowrap;
}

.tab-item {
  position: relative;
  display: inline-block;
  vertical-align: middle;
  margin-right: 50rpx;
  padding-bottom: 10rpx;
  box-sizing: border-box;
}

.tab-item-label {
  font-size: 30rpx;
  line-height: 44rpx;
  font-style: normal;
  font-weight: 500;
  color: #b0a9a3;
}

.tab-item.active .tab-item-label {
  color: #fc504e;
}

.tab-item.active ::after {
  content: '';
  width: 100%;
  height: 4rpx;
  background: #fc504e;
  border-radius: 2rpx;
  position: absolute;
  left: 0;
  bottom: 0;
}

.order-list {
  margin-top: 30rpx;
}

.x-order-item {
  display: block;
  margin-bottom: 24rpx;
}
