page{
  background: #fff;
}
.content {
  position: relative;
  overflow: hidden;
  padding-bottom: 154rpx;
}
.content-for-x{
  padding-bottom: 222rpx;
}
.cards-box{
  padding: 0 32rpx;
}
.card-item{
  position: relative;
  height: 120rpx;
  padding-left: 180rpx;
  overflow: hidden;
}
.card-item-title{
  color: #484848;
  font-size: 28rpx;
  line-height: 120rpx;
  position: absolute;
  left: 0;
  top: 0;
  font-weight: 500;
  padding-left: 8rpx;
}
.card-input{
  height: 120rpx;
  color: #74706C;
  line-height: 48rpx;
  font-size: 28rpx;
}
.input-placeholder{
  color: #B0A9A3;
}
.card-item-textarea{
  position: relative;
  min-height: 120rpx;
  padding-left: 180rpx;
  overflow: hidden;
}
.card-textarea{
  width: 442rpx;
  color: #74706C;
  line-height: 48rpx;
  font-size: 28rpx;
  padding: 36rpx 0;
  min-height: 48rpx;
  max-height: 144rpx;
  overflow-y:hidden;
  word-break:break-all;
  word-wrap:break-word;
}
.card-textarea-placeholder{
  padding-left: 180rpx;
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  margin: auto;
  color: #B0A9A3;
  line-height: 48rpx;
  font-size: 28rpx;
  height: 48rpx;
}

/* 底部按钮组 */
.footer-btn-group {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 666;
  box-sizing: border-box;
  background: #fff;
  padding: 10rpx 32rpx;
  overflow: visible;
  box-shadow: 0 -1px 3px rgba(0, 0, 0, .122);
}
.footer-shadow{
  width: 100%;
  height: 100%;
}
.shadow-for-x {
  bottom: 202rpx;
}
.footer-btn-group-for-x {
  height: 202rpx;
}
.footer-left{
  flex: 1;
  white-space: nowrap;
  line-height: 90rpx;
}
.footer-price-msg,.footer-price-unit,.footer-price-num{
  display: inline-block;
  vertical-align: top;
}
.footer-price-msg{
  color: #635F5D;
  font-size: 30rpx;
  font-weight: 500;
}
.footer-price-unit{
  font-size: 30rpx;
  font-weight: 500;
  padding-right: 20rpx;
}
.footer-price-num{
  font-size: 44rpx;
  width: 140rpx;
}
.x-btn-class{
  width: 240rpx;
  -webkit-transition: all 0 ease;
  transition: all 0 ease;
  margin: 0;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 34rpx;
  border-radius: 10rpx;
  overflow: hidden;
}