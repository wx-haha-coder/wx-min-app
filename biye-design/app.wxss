/* 一些全局样式配置及通用样式组件  */
/* base */
page {
  font-family: -apple-system, "PingFang SC", BlinkMacSystemFont, "Helvetica Neue", Helvetica, Arial, "Hiragino Sans GB", "Heiti SC", "Microsoft YaHei", "WenQuanYi Micro Hei", sans-serif;
}

.text-color {
  color: #484848;
}

.primary-color {
  color: #fc504e;
}

.grey-color {
  color: #b0a9a3;
}

.page {
  padding: 0 32rpx;
}

/* switch组件样式 */
.wx-switch-input::before {
  background: #EFEDEC !important;
}

/* 去掉button默认边框 */
button::after {
  border: 0;
}

/* tools */
.clearfix:after {
  content: ".";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
}

.text-hidden {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.text-hidden-2 {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.line-light-all::before,
.line-light-top::before,
.line-normal-top::before,
.line-normal-all::before {
  position: absolute;
  top: 0;
  left: 0;
  content: '';
  display: block;
  width: 100%;
  border-top: 1px solid #FFE5E2;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
}

.line-light-all::after,
.line-light-bottom::after,
.line-normal-bottom::after,
.line-normal-all::after {
  position: absolute;
  bottom: 0;
  left: 0;
  content: '';
  display: block;
  width: 100%;
  border-bottom: 1px solid #FFE5E2;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
  -webkit-transform-origin: 0 100%;
  transform-origin: 0 100%;
}

.line-normal-top::before,
.line-normal-all::before {
  border-top: 1px solid #EFEDEC;
}

.line-normal-bottom::after,
.line-normal-all::after {
  border-bottom: 1px solid rgb(243, 243, 243);
}

/*弹窗 start*/
/* components/dialog/dialog.wxss */
.wx_dialog_container {
  transition: all 0.5s ease;
  opacity: 0;
  position: relative;
  z-index: -1;
}

.transition_view {
  opacity: 1;
  z-index: 9999;
}

.wx-mask {
  position: fixed;
  z-index: 1000;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background: rgba(116, 112, 108, 0.2);
}

.wx-dialog {
  position: fixed;
  z-index: 5000;
  width: 600rpx;
  max-width: 600rpx;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  background-color: #FFFFFF;
  text-align: center;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 40rpx 60rpx 0 rgba(0, 0, 0, 0.06);
  padding-top: 60rpx;
}

.wx-real-dialog {
  width: 100%;
  height: auto;
  position: relative;
}

.close-img {
  width: 28rpx;
  height: 28rpx;
  position: absolute;
  top: -60rpx;
  right: 0;
  padding: 48rpx 48rpx 0 0;
}

.wx-dialog-title {
  font-size: 40rpx;
  line-height: 56rpx;
  color: rgb(255, 133, 118);
  margin-bottom: 12rpx;
  font-weight: 500;
}

.wx-dialog-content {
  padding: 0 74rpx 48rpx;
  min-height: 40rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  word-wrap: break-word;
  word-break: break-all;
  color: rgb(116, 112, 108);
  display: block;
}

.wx-dialog-footer {
  display: flex;
  align-items: center;
  position: relative;
  line-height: 41rpx;
  font-size: 30rpx;
  padding: 0 74rpx 48rpx;
}

.wx-dialog-btn {
  display: block;
  -webkit-flex: 1;
  flex: 1;
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
  position: relative;
  box-sizing: border-box;
  border-radius: 16rpx;
  text-align: center;
}

.wx-dialog-footer .wx-dialog-btn:nth-of-type(1) {
  color: rgb(255, 133, 118);
  border: 3rpx solid rgb(255, 175, 166);
  line-height: 76rpx;
  margin-right: 36rpx;
}

.wx-dialog-footer .wx-dialog-btn:nth-of-type(2) {
  color: #fff;
  background: rgb(255, 133, 118);
  line-height: 82rpx;
}

.wx-dialog-footer .wx-exit-btn {
  display: block;
  -webkit-flex: 1;
  flex: 1;
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
  position: relative;
  box-sizing: border-box;
  border-radius: 16rpx;
  text-align: center;
  color: #fff;
  background: rgb(255, 133, 118);
  line-height: 82rpx;
}

/*弹窗 end*/

/* loader */
.loader {
  width: 100%;
  height: 10rpx;
  left: 0;
  bottom: 10rpx;
  text-align: center;
  position: relative;
  box-sizing: border-box;
}

.loader-init {
  padding-top: 168rpx;
}

.loader .dot {
  background: #ff8576;
  margin: 0 10rpx;
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  display: inline-block;
  vertical-align: middle
}

.loader view:nth-child(1) {
  -webkit-animation: loader 1s -.5s linear infinite;
  animation: loader 1s -.5s linear infinite;
}

.loader view:nth-child(2) {
  -webkit-animation: loader 1s -.25s linear infinite;
  animation: loader 1s -.25s linear infinite;
}

.loader view:nth-child(3) {
  -webkit-animation: loader 1s 0s linear infinite;
  animation: loader 1s 0s linear infinite;
}

@-webkit-keyframes loader {

  0%,
  100% {
    opacity: 1;
  }

  50% {
    opacity: 0.3;
  }
}

@keyframes loader {

  0%,
  100% {
    opacity: 1;
  }

  50% {
    opacity: 0.3;
  }
}

/* right arrow */
.right-arrow {
  display: inline-block;
  position: relative;
  width: 36rpx;
  height: 36rpx;
}

.right-arrow::after {
  display: inline-block;
  content: " ";
  height: 18rpx;
  width: 18rpx;
  border-width: 3rpx 3rpx 0 0;
  border-color: #E2DFDC;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: absolute;
  top: 50%;
  right: 6rpx;
  margin-top: -9rpx;
}

